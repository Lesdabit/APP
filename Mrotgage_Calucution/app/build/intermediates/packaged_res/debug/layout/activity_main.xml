<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="411dp"
        android:layout_height="48dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/amount"
            android:layout_width="196dp"
            android:layout_height="49dp"
            android:text="Amount" />

        <TextView
            android:id="@+id/amount_value"
            android:layout_width="214dp"
            android:layout_height="match_parent"
            android:text="$100000" />

    </TableRow>

    <TableRow
        android:layout_width="410dp"
        android:layout_height="52dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="215dp">

        <TextView
            android:id="@+id/total_payment"
            android:layout_width="197dp"
            android:layout_height="match_parent"
            android:text="Total Payment" />

        <TextView
            android:id="@+id/total_payment_value"
            android:layout_width="213dp"
            android:layout_height="match_parent" />
    </TableRow>

    <TableRow
        android:layout_width="407dp"
        android:layout_height="53dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="105dp">

        <TextView
            android:id="@+id/interest_rate"
            android:layout_width="199dp"
            android:layout_height="52dp"
            android:text="Interest Rate" />

        <TextView
            android:id="@+id/interest_rate_value"
            android:layout_width="211dp"
            android:layout_height="53dp"
            android:text="3.5%" />
    </TableRow>

    <Button
        android:id="@+id/modify_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MODIFY DATA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="308dp" />

    <TableRow
        android:layout_width="410dp"
        android:layout_height="54dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="50dp">

        <TextView
            android:id="@+id/years"
            android:layout_width="197dp"
            android:layout_height="match_parent"
            android:text="Years" />

        <TextView
            android:id="@+id/years_value"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:text="30" />
    </TableRow>

    <TableRow
        android:layout_width="411dp"
        android:layout_height="55dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="159dp">

        <TextView
            android:id="@+id/monthly_payment"
            android:layout_width="197dp"
            android:layout_height="match_parent"
            android:text="Monthly payment" />

        <TextView
            android:id="@+id/monthly_payment_value"
            android:layout_width="210dp"
            android:layout_height="match_parent" />
    </TableRow>
</androidx.constraintlayout.widget.ConstraintLayout>